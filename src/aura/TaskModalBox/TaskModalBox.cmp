<aura:component description="TaskModalBox" controller="TaskBoardController">
    <aura:attribute name="task" type="TaskBoard__c"/>
    <aura:registerEvent name="closeModalEvent" type="c:closeModalEvent"/>
    <aura:registerEvent name="editTaskNameEvent" type="c:editTaskNameEvent"/>
    <aura:registerEvent name="editTaskDescriptionEvent" type="c:editTaskDescriptionEvent"/>
    <aura:registerEvent name="deleteTaskEvent" type="c:deleteTaskEvent"/>
    <section role="dialog" tabindex="0"
             aria-labelledby="modal-heading-01"
             aria-modal="true"
             aria-describedby="modal-content-id-1"
             class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">

            <header class="slds-modal__header">
                <lightning:buttonIcon iconName="utility:close"
                                      onclick="{!c.closeModel}"
                                      alternativeText="Close"
                                      variant="bare-inverse"
                                      class="slds-modal__close"/>
                <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Task detail</h2>
            </header>

            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <lightning:layout horizontalAlign="end">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{!c.deleteTask}"
                                          alternativeText="Delete"
                                          variant="bare" iconClass="slds-icon-action-delete"/>
                </lightning:layout>
                <lightning:formattedText value="Task Name:" class="slds-text-heading_label"/>
                <br/>
                <lightning:layout horizontalAlign="spread">
                    <lightning:formattedText aura:id="oldNameField" title="Name" value="{!v.task.Name}"
                                             class="slds-text-heading--large"/>
                    <lightning:input aura:id="newNameField" label="New Name" value="{!v.task.Name}" type="text"
                                     class="slds-hide"/>
                    <lightning:button aura:id="oldNameButton" label="Edit" variant="brand"
                                      onclick="{!c.startEditName}"/>
                    <lightning:button aura:id="newNameButton" label="Edit" variant="success" class="slds-hide"
                                      onclick="{!c.endEditName}"/>
                </lightning:layout>
                <br/><br/>
                <lightning:formattedText value="Task description:" class="slds-text-heading_label"/>
                <br/>
                <lightning:layout horizontalAlign="spread">
                    <lightning:formattedText aura:id="oldDescriptionField" title="Description"
                                             value="{!v.task.Description__c}"
                                             class="slds-text-body_regular"/>
                    <lightning:input aura:id="newDescriptionField" label="New Description"
                                     value="{!v.task.Description__c}" type="text"
                                     class="slds-hide"/>
                    <lightning:button aura:id="oldDescriptionButton" label="Edit" variant="brand"
                                      class="slds-m-left_xx-large"
                                      onclick="{!c.startEditDescription}"/>
                    <lightning:button aura:id="newDescriptionButton" label="Edit" variant="success" class="slds-hide"
                                      onclick="{!c.endEditDescription}"/>
                </lightning:layout>


            </div>

            <footer class="slds-modal__footer">
                <lightning:button variant="brand"
                                  label="Close"
                                  title="Close"
                                  onclick="{!c.closeModel}"/>
            </footer>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open"></div>

</aura:component>
